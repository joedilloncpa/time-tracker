# Database (Supabase Postgres recommended)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/time_tracker?schema=public"

# Auth: set to dev for local seeded auth bypass
AUTH_MODE="dev"

# Supabase (required when AUTH_MODE != dev)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Stripe
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"
# Optional but recommended in production to force one host (no preview URL drift).
# If unset on Vercel, code falls back to VERCEL_PROJECT_PRODUCTION_URL.
APP_CANONICAL_ORIGIN="https://your-production-domain.com"
